<% if flash[:errors]%>
    <% flash[:errors].each do |error|%>
        <p style='color: red;'><%= error %></p>
    <% end %>
<% end %>

<h1>Create an Artist</h1>


<%= form_for @artist do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :title %>
  <%= f.text_field :title %>


  <%= f.submit %>
<% end %>